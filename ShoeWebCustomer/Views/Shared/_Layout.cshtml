<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        @Html.ActionLink("ShoeFactory", "Index", "Home", null, new { @class = "navbar-brand" })

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="~/Product/CartDetails" tooltip="Cart">
                        <i class="fa fa-cart-plus text-white" aria-hidden="true"></i>
                    </a>

                </li>
            </ul>
            <ul class="navbar-nav">

                <li class="nav-item">
                    @if (Session["LoginUser"] != null)
                    {

                        @Html.ActionLink("MyOrders", "MyOrders", "Payment", null, new { @class = "nav-link" })
                    }
                </li>
                <li class="nav-item">
                    @if (Session["LoginUser"] != null)
                    {
                        <a class="nav-link" href="#">@Session["LoginUser"].ToString()</a>
                    }
                    else
                    {
                        <a class="nav-link" href="#">Username</a>
                    }
                </li>
                <li class="nav-item">
                    @if (Session["LoginUser"] != null)
                    {
                        @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "nav-link" })
                    }
                    else
                    {
                        @Html.ActionLink("Login", "UserLogin", "Account", null, new { @class = "nav-link" })
                    }
                </li>

            </ul>
        </div>
    </nav>

    <div class="container-fluid">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:center;">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>

    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


@{
    ViewBag.Title = "Home Page";
}

@{
    List<ShoeWebCustomer.Models.Products> sportsData = null;
    if (TempData["Sportsdata"] != null)
    {
        sportsData = (List<ShoeWebCustomer.Models.Products>)TempData["Sportsdata"];
    }

    List<ShoeWebCustomer.Models.Products> casualData = null;
    if (TempData["Casualdata"] != null)
    {
        casualData = (List<ShoeWebCustomer.Models.Products>)TempData["Casualdata"];
    }

    List<ShoeWebCustomer.Models.Products> formalData = null;
    if (TempData["Formaldata"] != null)
    {
        formalData = (List<ShoeWebCustomer.Models.Products>)TempData["Formaldata"];
    }
}

<div class="container">
    @using (Html.BeginForm("SearchProduct", "Product", FormMethod.Get))
    {
        <center>
            <div class="row my-4 mySeachgroup">

                <div class="col-md-10">
                    <input type="text" name="searchString" placeholder="Search Product" class="form-control" />
                </div>
                <div class="col-md-2 mySearchbtn">
                    <input type="submit" value="Search" class="btn btn-danger" />
                </div>
               
            </div>
        </center>
    }
    </div>

<Center style="margin-top:-15px; margin-bottom:10px;">
    <div class="btn-group">
        @Html.ActionLink("Sports", "ProductListbyCategory", "Product", new { id = "3" }, new { @class = "btn btn-primary mx-2 rounded" })
        @Html.ActionLink("Formal", "ProductListbyCategory", "Product", new { id = "2" }, new { @class = "btn btn-secondary mx-2 rounded" })
        @Html.ActionLink("Casual", "ProductListbyCategory", "Product", new { id = "1" }, new { @class = "btn btn-success mx-2 rounded" })
    </div>
</Center>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/Imges/SliderImg/slide3.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Imges/SliderImg/slide2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Imges/SliderImg/slide1.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br />

<div class="text-center bg-light">
    <label class="font-weight-bolder" style="font-size: 22px; text-transform:uppercase;margin-bottom:0px!important;">Latest Casual Shoes</label>
</div>

<div class="container-fluid cont-box bg-trasparent  p-3" style="position: relative">

    <div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4">

        @if (casualData != null)
        {
            foreach (var product in casualData)
            {

                <div class="col my-4">
                    <div class="card h-100">
                        <a href="#">
                            <img src="@product.Prod_Image_Path" class="card-img-top" alt="title" />
                        </a>

                        <div class="label-top">
                            <label class="text-danger font-weight-bold" href="#">@product.Brand.Brand_Name</label>
                        </div>
                        <div class="card-body">
                            <div>
                                <p><b>Price</b> = &nbsp;&#8377;&nbsp;@product.Prod_Selling&nbsp;&nbsp;<strike class="text-danger">&#8377;&nbsp;@product.Prod_Price</strike></p>
                            </div>
                            <h3 class="card-title">
                                @product.Prod_ShortName
                            </h3>
                            <div>
                                @*<input type="button" class="btn btn-warning" value="View More" />*@
                                @Html.ActionLink("View More", "ProductDetails", "Product", new { id = product.Prod_Id }, new { @class = "btn btn-warning" })
                            </div>
                        </div>
                    </div>
                </div>

            }
        }
    </div>
</div>

<br />

